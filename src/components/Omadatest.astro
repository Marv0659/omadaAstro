---
import Testimonials from "./Testimonials.astro";
import TestimonialsSite from "../pages/testimonialsSite.astro";
---

<div class="omadatest">
  <h4>Omada Testimonials</h4>
  <hr />
  <div class="omadatesttext">
    <TestimonialsSite/>
  </div>
</div>
<style>
  img {
    max-width: 100%;
    height: 200px;
    display: block;
    border-radius: 5px;
  }
  h4 {
    font-family: sans-serif;
    text-decoration: none;
    color: black;
    font-size: 3rem;
  }
  hr {
    width: 80%;
  }
  .omadatest {
    text-align: center;
    margin-top: 4rem;
  }
  .omadatest h4 {
    margin-bottom: 2rem;
  }
  .bannerpic {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 40%;
    padding-top: 4rem;
    padding-bottom: 8rem;
  }
  .omadatesttext {
    
    margin-top: 3rem;
    padding: 0 18rem;
    color: #e55f4d;
    font-size: 2rem;
  }


  @media screen and (max-width: 750px) {
    .omadatesttext {
    padding: 0;
    margin-top: 3rem;
    color: #e55f4d;
    font-size: 2rem;
  }
    
}
  
</style>
